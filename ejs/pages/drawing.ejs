<!DOCTYPE html>
<html lang="en">

<%- include('ejs/partials/head', {title: DRAWING}); %>

<body>

  <%- include('ejs/partials/header', {title: DRAWING}); %>

  <main>
    <%- include('ejs/partials/sectionIntro', {title: DRAWING}); %>
    <div class="row">
      <!-- TODO: use partials for the following block -->
      <% drawings.forEach(function(category) { %>
        <h5 class="center" style="padding-top:2vh"><%= category.medium %></h5>
        <hr style="width: 45%;">
        <div class="row center">
          <% category.images.forEach(function(image) { %>
            <% if (!image.isHidden && image.spoilerText && image.spoilerText !== "") { %>
              <div class="spoiler">
                <input id="spoiler-<%= image.title.replace(/ /g,"-") %>" type="checkbox">
                <img src=<%= 'https://drive.google.com/uc?export=view&id=' + image.thumbnailId %> alt="<%= image.title %>">
                <label for="spoiler-<%= image.title.replace(/ /g,"-") %>" class="spoiler-button">Click to Reveal<br/>(<%= image.spoilerText %>)</label>
              </div>
            <% } else if (!image.isHidden) { %>
              <div class="thumbnail">
                <!-- <a href=<%= 'https://drive.google.com/file/d/' + image.photoId + '/view' %> target="_blank"> -->
                  <img src=<%= 'https://drive.google.com/uc?export=view&id=' + image.thumbnailId %> alt="<%= image.title %>">
                <!-- </a> -->
              </div>
            <% } %>
          <% }); %>
        </div>
      <% }); %>
    </div>
  </main>

  <%- include('ejs/partials/footer', {flavorText: "In the words of Bob Ross: Happy painting, and God bless!"}); %>
  <%- include('ejs/partials/scripts'); %>

</body>

</html>
